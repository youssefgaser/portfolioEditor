<body>
    <!-- Page Content -->
    <header>
        <h1 id="page-title">Default Page Title</h1>
    </header>

    <section id="home">
        <h2 id="home-heading">Default Home Heading</h2>
        <p id="home-description">Default Home Description</p>
    </section>

    <section id="about">
        <h2 id="about-heading">Default About Section</h2>
        <p id="about-description">Default About Description</p>
    </section>

    <footer>
        <p id="contact-info">Default Contact Information</p>
    </footer>

    <!-- Buttons -->
    <button id="editButton" class="edit-btn">Edit Your Website</button>
    <button id="resetButton" class="reset-btn">Reset Content</button>

    <!-- Modal -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Edit Content</h2>
            <form id="contentForm">
                <label for="titleInput">Page Title</label>
                <input type="text" id="titleInput" placeholder="Enter new title">

                <label for="homeHeadingInput">Home Heading</label>
                <textarea id="homeHeadingInput" placeholder="Enter new home heading"></textarea>

                <label for="aboutHeadingInput">About Heading</label>
                <textarea id="aboutHeadingInput" placeholder="Enter new about heading"></textarea>

                <label for="contactInfoInput">Contact Info</label>
                <textarea id="contactInfoInput" placeholder="Enter new contact info"></textarea>

                <button type="submit">Update Content</button>
            </form>
        </div>
    </div>

    <script>
        const defaultContent = {
            pageTitle: "Default Page Title",
            homeHeading: "Default Home Heading",
            homeDescription: "Default Home Description",
            aboutHeading: "Default About Section",
            aboutDescription: "Default About Description",
            contactInfo: "Default Contact Information",
        };

        const modal = document.getElementById("modal");
        const editButton = document.getElementById("editButton");
        const resetButton = document.getElementById("resetButton");
        const closeButton = document.querySelector(".close");
        const contentForm = document.getElementById("contentForm");

        const pageTitle = document.getElementById("page-title");
        const homeHeading = document.getElementById("home-heading");
        const homeDescription = document.getElementById("home-description");
        const aboutHeading = document.getElementById("about-heading");
        const aboutDescription = document.getElementById("about-description");
        const contactInfo = document.getElementById("contact-info");

        // Load content from localStorage on page load
        window.addEventListener("load", () => {
            const savedContent = JSON.parse(localStorage.getItem("contentData")) || defaultContent;
            updatePageContent(savedContent);
        });

        // Open modal
        editButton.addEventListener("click", () => {
            modal.style.display = "flex";
        });

        // Close modal
        closeButton.addEventListener("click", () => {
            modal.style.display = "none";
        });

        // Update content and save to localStorage
        contentForm.addEventListener("submit", (e) => {
            e.preventDefault();

            const updatedContent = {
                pageTitle: document.getElementById("titleInput").value || pageTitle.textContent,
                homeHeading: document.getElementById("homeHeadingInput").value || homeHeading.textContent,
                aboutHeading: document.getElementById("aboutHeadingInput").value || aboutHeading.textContent,
                contactInfo: document.getElementById("contactInfoInput").value || contactInfo.textContent,
            };

            updatePageContent(updatedContent);
            localStorage.setItem("contentData", JSON.stringify(updatedContent));
            modal.style.display = "none";
        });

        // Reset content to defaults
        resetButton.addEventListener("click", () => {
            updatePageContent(defaultContent);
            localStorage.removeItem("contentData");
            alert("Content reset to default values.");
        });

        // Function to update page content
        function updatePageContent(content) {
            pageTitle.textContent = content.pageTitle;
            homeHeading.textContent = content.homeHeading;
            aboutHeading.textContent = content.aboutHeading;
            contactInfo.textContent = content.contactInfo;
        }
    </script>
</body>
</html>
